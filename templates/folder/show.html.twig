{% extends 'base.html.twig' %}

{% block title %}Détails du Dossier{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Détails du Dossier</h1>

    <div class="card">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="row">Numéro de Permission Urba</th>
                        <td>{{ folder.urbaPermissionNumber }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Nom du Demandeur</th>
                        <td>{{ folder.petitionerName }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Adresse des Travaux</th>
                        <td>{{ folder.addressOfWorks }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Détails des Travaux</th>
                        <td>{{ folder.detailsOfWorks }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="mt-4 d-flex justify-content-between">
                <div>
                    <a href="{{ path('app_folder_index') }}" class="btn btn-primary">Retour à la liste</a>
                    <a href="{{ path('app_folder_edit', {'id': folder.id}) }}" class="btn btn-secondary">Modifier</a>
                </div>
                <div>
                    {{ include('folder/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}